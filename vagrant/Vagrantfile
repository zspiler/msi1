Vagrant.configure("2") do |config|
    
    config.vm.box = "debian/jessie64"
    config.vm.hostname = "debian"
    config.vm.network "public_network", type: "dhcp", :bridge => 'en0: Wi-Fi (AirPort)'

    config.vm.provider "virtualbox" do |v|
        v.cpus = 2
        v.memory = 1024
    end
    
    config.vm.provision:shell, inline: "apt-get update"
    config.vm.provision:shell, inline: "apt-get install -y vim"
    config.vm.provision:shell, inline: "apt-get install -y tightvncserver"
    config.vm.provision:shell, inline: "apt-get install -y xfce4-goodies xfce4"

    config.vm.provision:shell, inline: "mkdir -p /root/.vnc"
    config.vm.provision:shell, inline: "echo geslo123 | vncpasswd -f > /root/.vnc/passwd"
    config.vm.provision:shell, inline: "chmod 600 /root/.vnc/passwd" 


    # create and modify 'xstartup' file
    config.vm.provision:shell, inline: "vncserver && vncserver -kill :1 && echo 'startxfce4 &' >> /root/vagrant/.vnc/xstartup" 

    # start VNC server
    config.vm.provision:shell, inline: "vncserver -geometry 1920x1080"

    # sudo passwd root
end